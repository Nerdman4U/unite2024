<%= slider_new(@slider) do
  { css: "slideshow-container-top vh-100" }
end %>

<!-- Fullscreen Slider Section -->
<%#= slider do
  [{
    link: "",
    topic_1: _("Support"),
    topic_2: _("Radical actions are urgently needed to save our planet."),
    img_default: image_path("slides/lenkki-pitkospuilla.jpg"),
    img_alt: _("At duckboard"),
    img_blank: image_path("blank.gif")
  }]
  end
  %>
