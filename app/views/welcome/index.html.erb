<%= slider_new(@welcome_slider) do
    {
      css: "slideshow-container-top",
      link: link_to(appeal_path(locale: locale), { class: button_white }) do
              content = tag.span class: "bi bi-info-circle align-middle" do " " end
              content << _("Support now")
              content
            end
    }
end
%>

<section class="section-block bg-white color-black upx-8 upy-8 text-center">
  <p><%# _("We suggest the United Nations presents a global initiative for a redeployment of the world’s armed forces towards significant environmental tasks as soon as possible.") %></p>
  <h1><%= _("At this site we collect signatures for the initiative sent to the United Nations.") %></h1>
  <p class="umt-3">
    <%= link_to initiative_path(locale: locale),
        { :class => button_white } do
          _("Initiative")
        end
    %>
    <%= link_to why_vote_path(locale: locale),
        { :class => button_white } do
          _("Why vote?")
        end
    %>
    <%= link_to new_vote_path(locale: locale),
        { :class => button_white } do
          content = tag.span class: "bi bi-person-add align-middle" do " " end
          content << _("Vote")
          content
        end
    %>
  </p>
</section>

<!-- Karuselli -->
