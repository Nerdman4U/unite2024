<%= fs_slider({section_classes: ["unite-landing"], show_navigation: false}) do
[{
  link: link_to(new_vote_path(locale: locale, anchor: "sign"),
            :class => "fw-bold fs-4-5 position-static tms-caption mt-5 button text-decoration-none bkg-white thick bkg-hover-cornflowerblue color-black color-hover-white text-uppercase no-margin-bottom text-uppercase shadow rounded",
            data: { animate_in: "opacity:0;transY:50px;duration:600ms;delay:400ms;easing:easeFastSlow;",
            no_scale: true, no_turbolink: true }) { _("Support now") },
  topic_1: _("Save the planet"),
  topic_2: _("Give the armies a new, positive task: protect the environment"),
  img_srcset: "#{image_path("slides/earth-w1024.jpg")} 1x, #{image_path("slides/earth-w2048@2x.jpg")} 2x, #{image_path("slides/earth-w3072@3x.jpg")} 3x, #{image_path("slides/earth-w4096@4x.jpg")} 4x",
  img_mobile: image_path("slides/earth-w512.jpg"),
  img_tablet: image_path("slides/earth-w1024.jpg"),
  img_default: image_path("slides/earth-w512.jpg"),
  img_blank: image_path("blank.gif")
}]
end
%>

<!-- karuselli -->
<div class="slideshow-container section-block bkg-charcoal m-0 p-0 overflow-hidden" data-decorators="carusel">
  <ol class="slideshow slideshow-carusel slideshow-landing" data-interval="5" data-decorators="">
    <li data-image-src=<%= image_path("slides/forest.jpg") %> data-class="black-text" />
    <li data-image-src=<%= image_path("slides/woodland-w1024.jpg") %> data-class="black-text" />
    <li data-image-src=<%= image_path("slides/viidakko.jpg") %> data-class="black-text" />
    <li data-image-src=<%= image_path("slides/tyyni-jarvenselka.jpg") %> data-class="black-text" />
    <li data-image-src=<%= image_path("slides/talvi18.jpg") %> data-class="black-text" />
    <li data-image-src=<%= image_path("slides/avaruus.jpg") %> />
    <li data-image-src=<%= image_path("slides/autumn-shore.jpg") %> />
    <li data-image-src=<%= image_path("slides/sunrise-on-the-sea.jpg") %> />
  </ol>
  <div id="slideshow-caption" data-caption="landing-carusel" class="umx-5 container feature-column large center horizon" data-animate-in="opacity:0;transY:50px;duration:600ms;delay:300ms;easing:easeFastSlow;" data-threshold="1">
    <div class="row ">
      <div class="col-12 text-start">
        <h2 class="umb-2 ufs-4">
          <span><%= _("First Aid") %> <%= _("To Our Common World") %></span>
        </h2>
      </div>
    </div>
    <div class="row">
      <div class="col-12 text-start">
        <p class="umb-2 ufs-1-5 text-uppercase">
          <span>
            <%= _("There is a hidden potential at hand: the national armies.") %>
            <%= _("We have to give the armies a new, positive task.") %>
            <%= _("In these pages we collect support for a global initiative.") %>
          </span>
        </p>
      </div>
    </div>
  </div>
</div>
<!-- /karuselli -->

