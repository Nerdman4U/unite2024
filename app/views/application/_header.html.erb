<header class="header header-transparent">
  <div class="container-fluid header-inner">
    <div class="row nav-bar upx-8">
      <div class="col nav-bar-inner">
        <div class="earth">
          <% earths = ["earth.png", "earth-02.png", "earth-05.png"]
             %>
          <%= link_to image_tag(earths.sample, alt: _("The Planet Earth, our home.")), locale_root_path(locale: locale), :class => "no-transition" %>
        </div>
        <div class="logo" id="logo">
          <div class="logo-inner">
            <%= link_to image_tag(UNITE_LOGO_DARK, alt: "Logo"), locale_root_path(locale: locale)  %>
            <%= link_to image_tag(UNITE_LOGO, alt: "Logo"), locale_root_path(locale: locale) %>
          </div>
        </div>
      </div>
      <div class="col">
        <nav class="nav-block mobile-navigation text-end upt-1">
          <div class="btn mobile-toggle"><%= image_tag("nav-icon.png", alt: "Menu", onclick: "window.unite.header.toggleNavigation()") %></div>
        </nav>
        <nav class="nav-block primary-navigation text-end upt-1">
          <ul class="p-0 m-0">
            <li>
              <%= link_to _("Supporters"), votes_path(locale: locale) %>
            </li>
            <li>
              <%= link_to _("Read more"), appeal_path(locale: locale) %>
            </li>
            <li>
              <%= link_to _("Support now"), new_vote_path(locale: locale) %>
            </li>
            <% if logged_in? && current_vote %>
            <li>
              <%= link_to_vote %>
            </li>
            <li>
              <%= link_to _("Logout"), logout_path, method: :delete, class: "logout" %>
            </li>
            <% end %>
          </ul>
          <%= language_selection %>
        </nav>

      </div>
    </div>
  </div>
</header>