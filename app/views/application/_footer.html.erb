  <div class="row upy-3">
    <div class="col-6 left ufs-0-5 text-start">
      <%= _("%{title} v%{version} with Ruby %{ruby_version} and Rails %{rails_version}") % {title: _(UNITE_TITLE), version: (Rails.application.config.version rescue ""), ruby_version: RUBY_VERSION, rails_version: Rails.version} %>
