          </div>
        </div>
      </div>
    </div>

    <div class="col-2 upt-2">
      <ul class="p-0">
        <li>
          <%= link_to UNITE_FACEBOOK_URL, target: "_blank" do %>
          <i class="bi bi-facebook"></i>
          <% end %>
        </li>
        <li>
          <%= link_to UNITE_ROOT_URL, target: "_blank" do %>
          <i class="bi bi-twitter-x"></i>
          <% end %>
        </li>
        <li>
          <%= link_to UNITE_YOUTUBE_URL, target: "_blank" do %>
          <i class="bi bi-youtube"></i>
          <% end %>
        </li>
        <li>
          <%= link_to GITHUB_URL, target: "_blank" do %>
          <i class="bi bi-github"></i>
          <% end %>
        </li>
      </ul>
    </div>

    <div class="col-2 upt-2">
      <ul class="p-0">
        <% if show_link_to_vote? %>
        <li>
          <%= link_to_vote %>
        </li>
        <% end %>
        <% if logged_in? %>
        <li>
          <%= link_to_logout %>
        </li>
        <% end %>
      </ul>
    </div>

    <div class="col-4 order-last text-end upt-2">
      <div id="recent_votes_container" style="display:none">
        <div id="recent_votes" class="text-end">
          <div class="row">
            <div class="col-2"><%= _("Country") %></div>
            <div class="col-10"><%= _("Name") %></div>
